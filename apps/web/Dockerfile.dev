FROM node:18-alpine
RUN apk --no-cache add git
RUN npm install -g pnpm

WORKDIR /app

# Copy all dependency related files and install dependencies
COPY package.json ./
COPY pnpm* ./
COPY apps/web/package.json /app/web/

RUN pnpm install

COPY workspace.json ./
COPY nx.json ./

COPY ./ .

CMD [ "pnpm", "start", "web" ]


